<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="TextCell">
		<item name="android:layout_weight">1</item>
		<item name="android:layout_width">0dip</item>
	</style>

	<style name="TextCellCentered" parent="TextCell">
		<item name="android:gravity">center</item>
	</style>

	<style name="TextCellCenteredBold" parent="@style/TextCellCentered">
		<item name="android:textStyle">bold</item>
	</style>

	<style name="MetricPrefixTitle" parent="@style/TextCellCenteredBold">
		<item name="android:textSize">24sp</item>
	</style>

	<style name="MetricPrefixHeader" parent="@style/TextCellCenteredBold">
		<item name="android:textSize">16sp</item>
	</style>

	<style name="MetricPrefix" parent="@style/TextCellCentered">
		<item name="android:textSize">15sp</item>
		<item name="android:padding">4sp</item>
	</style>

	<style name="MetricExponent" parent="@style/MetricPrefix">
	</style>

	<style name="CalculatorTable">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:padding">12dp</item>
		<item name="android:stretchColumns">*</item>
	</style>
	<style name="CalculatorResult" parent="@style/TextCell">
		<item name="android:background">@color/light_gray</item>
		<item name="android:gravity">right</item>
		<item name="android:layout_marginBottom">5dip</item>
		<item name="android:layout_marginLeft">3dip</item>
		<item name="android:layout_marginRight">3dip</item>
		<item name="android:layout_marginTop">5dip</item>
		<item name="android:paddingBottom">5dip</item>
		<item name="android:paddingRight">12dip</item>
		<item name="android:paddingTop">5dip</item>
		<item name="android:textColor">@color/black</item>
		<item name="android:textSize">27sp</item>
	</style>

	<style name="CalculatorButton" parent="TextCellCenteredBold">
		<item name="android:onClick">onClick</item>
		<item name="android:textSize">25sp</item>
	</style>

	<style name="CalculatorButton.Operator">
		<item name="android:textColor">@color/blue</item>
	</style>

	<style name="CalculatorButton.Clear">
		<item name="android:textColor">@color/red</item>
	</style>
</resources>
